{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-op_creditcardonepage" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
          {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text}}</a></li>
          {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
      {% if error_warning %}
	<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
	  <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
      {% endif %}
    <div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
	  </div>
	  <div class="panel-body">
	 	 <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-op_creditcardonepage" class="form-horizontal">
	 	 	<div class="form-group required">
	            <label class="col-sm-2 control-label" for="input-account">{{ entry_account }}</label>
	            <div class="col-sm-10">
	              <input type="text" name="payment_op_creditcardonepage_account" value="{{ payment_op_creditcardonepage_account }}" placeholder="{{ entry_account }}" id="input-account" class="form-control" />
					{% if error_account  %}
	              <div class="text-danger">{{ error_account }}</div>
                    {% endif %}
	            </div>
	        </div>
	        <div class="form-group required">
	            <label class="col-sm-2 control-label" for="input-terminal">{{ entry_terminal }}</label>
	            <div class="col-sm-10">
	              <input type="text" name="payment_op_creditcardonepage_terminal" value="{{ payment_op_creditcardonepage_terminal }}" placeholder="{{ entry_terminal }}" id="input-terminal" class="form-control" />
					{% if error_terminal  %}
	              <div class="text-danger">{{ error_terminal }}</div>
					{% endif %}
	            </div>
	        </div>
	        <div class="form-group required">
	            <label class="col-sm-2 control-label" for="input-securecode">{{ entry_securecode }}</label>
	            <div class="col-sm-10">
	              <input type="text" name="payment_op_creditcardonepage_securecode" value="{{ payment_op_creditcardonepage_securecode }}" placeholder="{{ entry_securecode }}" id="input-securecode" class="form-control" />
				  {% if  error_securecode  %}
	              <div class="text-danger">{{ error_securecode }}</div>
	              {% endif %}
	            </div>
	        </div>
	        <div class="form-group required">
	            <label class="col-sm-2 control-label" for="input-publickey">{{ entry_publickey }}</label>
	            <div class="col-sm-10">
	              <input type="text" name="payment_op_creditcardonepage_publickey" value="{{ payment_op_creditcardonepage_publickey }}" placeholder="{{ entry_publickey }}" id="input-publickey" class="form-control" />
                    {% if  error_publickey  %}
	              <div class="text-danger">{{ error_publickey }}</div>
                    {% endif %}
	            </div>
	        </div>


	        <div class="form-group">
	            <label class="col-sm-2 control-label" for="input-transaction">{{ entry_transaction }}</label>
	            <div class="col-sm-10">
	              <select name="payment_op_creditcardonepage_transaction" id="input-transaction" class="form-control"> 
					{% if payment_op_creditcardonepage_transaction == text_pay %}
	                <option value="{{ text_pay }}" selected="selected">{{ text_pay }}</option>
	                {% else %}
	                <option value="{{ text_pay }}">{{ text_pay }}</option>
	                {% endif %}

					{% if payment_op_creditcardonepage_transaction == text_test %}
	                <option value="{{ text_test }}" selected="selected">{{ text_test }}</option>
                    {% else %}
	                <option value="{{ text_test }}">{{ text_test }}</option>
                    {% endif %}
	              </select>
	            </div>
	        </div>

	        <div class="form-group">
	            <label class="col-sm-2 control-label" for="input-https">{{ entry_https }}</label>
	            <div class="col-sm-10">
	              <select name="payment_op_creditcardonepage_https" id="input-https" class="form-control">
					{% if payment_op_creditcardonepage_https == text_ssl_https %}
	                <option value="{{ text_ssl_https }}" selected="selected">{{ text_ssl_https }}</option>
	                {% else %}
	                <option value="{{ text_ssl_https }}">{{ text_ssl_https }}</option>
	                {% endif %}

					{% if payment_op_creditcardonepage_https == text_ssl_http %}
	                <option value="{{ text_ssl_http }}" selected="selected">{{ text_ssl_http }}</option>
                    {% else %}
	                <option value="{{ text_ssl_http }}">{{ text_ssl_http }}</option>
                    {% endif %}
	              </select>
	            </div>
	        </div>

	        <div class="form-group">
	            <label class="col-sm-2 control-label" for="input-language">{{ entry_language }}</label>
	            <div class="col-sm-10">
	              <select name="payment_op_creditcardonepage_language" id="input-language" class="form-control">
					{% if payment_op_creditcardonepage_language == English %}
	                <option value="en" selected="selected">{{ English }}</option>
	                {% else %}
	                <option value="en">{{ English }}</option>
	                {% endif %}

					{% if payment_op_creditcardonepage_language == German %}
	                <option value="de" selected="selected">{{ German }}</option>
	                {% else %}
	                <option value="de">{{ German }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == French %}
	                <option value="fr" selected="selected">{{ French }}</option>
	                {% else %}
	                <option value="fr">{{ French }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Italian %}
	                <option value="it" selected="selected">{{ Italian }}</option>
	                {% else %}
	                <option value="it">{{ Italian }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Spanish %}
	                <option value="es" selected="selected">{{ Spanish }}</option>
	                {% else %}
	                <option value="es">{{ Spanish }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Portuguese %}
	                <option value="pt" selected="selected">{{ Portuguese }}</option>
	                {% else %}
	                <option value="pt">{{ Portuguese }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Russian %}
	                <option value="ru" selected="selected">{{ Russian }}</option>
	                {% else %}
	                <option value="ru">{{ Russian }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Japanese %}
	                <option value="ja" selected="selected">{{ Japanese }}</option>
	                {% else %}
	                <option value="ja">{{ Japanese }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Korean %}
	                <option value="ko" selected="selected">{{ Korean }}</option>
	                {% else %}
	                <option value="ko">{{ Korean }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Arabic %}
	                <option value="ar" selected="selected">{{ Arabic }}</option>
	                {% else %}
	                <option value="ar">{{ Arabic }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Turkish %}
	                <option value="tr" selected="selected">{{ Turkish }}</option>
	                {% else %}
	                <option value="tr">{{ Turkish }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Simplified %}
	                <option value="zh_CN" selected="selected">{{ Simplified }}</option>
	                {% else %}
	                <option value="zh_CN">{{ Simplified }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Traditional %}
	                <option value="zh_HK" selected="selected">{{ Traditional }}</option>
	                {% else %}
	                <option value="zh_HK">{{ Traditional }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Norway %}
	                <option value="nb" selected="selected">{{ Norway }}</option>
	                {% else %}
	                <option value="nb">{{ Norway }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Sweden %}
	                <option value="sv" selected="selected">{{ Sweden }}</option>
	                {% else %}
	                <option value="sv">{{ Sweden }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Netherlands %}
	                <option value="nl" selected="selected">{{ Netherlands }}</option>
	                {% else %}
	                <option value="nl">{{ Netherlands }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Danish %}
	                <option value="da" selected="selected">{{ Danish }}</option>
	                {% else %}
	                <option value="da">{{ Danish }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Finnish %}
	                <option value="fi" selected="selected">{{ Finnish }}</option>
	                {% else %}
	                <option value="fi">{{ Finnish }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Polish %}
	                <option value="pl" selected="selected">{{ Polish }}</option>
	                {% else %}
	                <option value="pl">{{ Polish }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Malay %}
	                <option value="ms" selected="selected">{{ Malay }}</option>
	                {% else %}
	                <option value="ms">{{ Malay }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Thai %}
	                <option value="th" selected="selected">{{ Thai }}</option>
	                {% else %}
	                <option value="th">{{ Thai }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Filipino %}
	                <option value="fil" selected="selected">{{ Filipino }}</option>
	                {% else %}
	                <option value="fil">{{ Filipino }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Indonesian %}
	                <option value="id" selected="selected">{{ Indonesian }}</option>
	                {% else %}
	                <option value="id">{{ Indonesian }}</option>
	                {% endif %}

	                {% if payment_op_creditcardonepage_language == Vietnamese %}
	                <option value="vi" selected="selected">{{ Vietnamese }}</option>
	                {% else %}
	                <option value="vi">{{ Vietnamese }}</option>
	                {% endif %}

	              </select>
	            </div>
	        </div>

	        <div class="form-group">
	            <label class="col-sm-2 control-label" for="input-default-order-status">{{ entry_default_order_status }}</label>
	            <div class="col-sm-10">
	              <select name="payment_op_creditcardonepage_default_order_status_id" id="input-default-order-status" class="form-control">
					{% for order_status in order_statuses  %}
					{% if order_status.order_status_id == payment_op_creditcardonepage_default_order_status_id %}
	                <option value="{{ order_status.order_status_id}}" selected="selected">{{ order_status.name }}</option>
	                {% else %}
	                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
	                {% endif %}
					{% endfor %}
	              </select>
	            </div>
	        </div>
	        <div class="form-group">
	            <label class="col-sm-2 control-label" for="input-success-order-status">{{ entry_success_order_status }}</label>
	            <div class="col-sm-10">
	              <select name="payment_op_creditcardonepage_success_order_status_id" id="input-success-order-status" class="form-control">
					 {% for order_status in order_statuses %}
					 {% if order_status.order_status_id == payment_op_creditcardonepage_success_order_status_id %}
	                <option value="{{ order_status.order_status_id}}" selected="selected">{{ order_status.name }}</option>
	                {% else %}
	                <option value="{{ order_status.order_status_id}}">{{ order_status.name}}</option>
					 {% endif %}
                     {% endfor %}
	              </select>
	            </div>
	        </div>
	        <div class="form-group">
	            <label class="col-sm-2 control-label" for="input-failed-order-status">{{ entry_failed_order_status }}</label>
	            <div class="col-sm-10">
	              <select name="payment_op_creditcardonepage_failed_order_status_id" id="input-failed-order-status" class="form-control">
					{% for order_status in order_statuses %}
					{% if order_status.order_status_id == payment_op_creditcardonepage_failed_order_status_id %}
	                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
					{% else %}
	                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
					{% endfor %}
	              </select>
	            </div>
	        </div>
	        <div class="form-group">
	            <label class="col-sm-2 control-label" for="input-pending-order-status">{{ entry_pending_order_status }}</label>
	            <div class="col-sm-10">
	              <select name="payment_op_creditcardonepage_pending_order_status_id" id="input-pending-order-status" class="form-control">
					{% for order_status in order_statuses %}
					{% if order_status.order_status_id  == payment_op_creditcardonepage_pending_order_status_id %}
	                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
					 {% else %}
					  <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
	              </select>
	            </div>
	        </div>
			<div class="form-group">
	            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
	            <div class="col-sm-10">
	              <select name="payment_op_creditcardonepage_geo_zone_id" id="input-geo-zone" class="form-control">
	                <option value="0">{{ text_all_zones }}</option>
					{% for geo_zone in geo_zones %}
					{% if geo_zone.geo_zone_id == payment_op_creditcardonepage_geo_zone_id %}
	                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                      {% else %}
	                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                    {% endif %}
					{% endfor %}
	              </select>
	            </div>
	        </div>
	        <div class="form-group">
	            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
	            <div class="col-sm-10">
	              <select name="payment_op_creditcardonepage_status" id="input-status" class="form-control">
					{% if payment_op_creditcardonepage_status %}
	                <option value="1" selected="selected">{{ text_enabled }}</option>
	                <option value="0">{{ text_disabled }}</option>
					{% else %}
	                <option value="1">{{ text_enabled }}</option>
	                <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
	              </select>
	            </div>
	        </div>
	        <div class="form-group">
	            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
	            <div class="col-sm-10">
	              <input type="text" name="payment_op_creditcardonepage_sort_order" value="{{ payment_op_creditcardonepage_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
	            </div>
	        </div>
	 	 </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
